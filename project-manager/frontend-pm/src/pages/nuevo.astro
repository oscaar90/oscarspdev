---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Nuevo Proyecto">
  <h1>➕ Crear Nuevo Proyecto</h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">
    Completa el formulario para crear un nuevo proyecto
  </p>

  <div class="card">
    <form id="proyecto-form">
      <div class="form-group">
        <label for="titulo">Título *</label>
        <input type="text" id="titulo" required placeholder="Ej: Desarrollar aplicación de tareas">
      </div>

      <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea id="descripcion" rows="4" placeholder="Describe tu proyecto..."></textarea>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
        <div class="form-group">
          <label for="estado">Estado inicial</label>
          <select id="estado">
            <option value="idea">Idea</option>
            <option value="prototipo">Prototipo</option>
            <option value="en_progreso">En Progreso</option>
            <option value="pausado">Pausado</option>
          </select>
        </div>

        <div class="form-group">
          <label for="prioridad">Prioridad (0-10)</label>
          <input type="number" id="prioridad" min="0" max="10" value="0">
        </div>
      </div>

      <div class="form-group">
        <label for="checklist-item">Checklist (opcional)</label>
        <div style="display: flex; gap: 0.5rem;">
          <input type="text" id="checklist-item" placeholder="Agregar tarea...">
          <button type="button" class="btn-secondary" onclick="agregarChecklistItem()">
            Agregar
          </button>
        </div>
        <div id="checklist-items" style="margin-top: 1rem;"></div>
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <button type="submit" class="btn">Crear Proyecto</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>

  <div id="mensaje" style="margin-top: 1rem;"></div>

  <style>
    .checklist-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem;
      background: var(--bg-secondary);
      border-radius: 4px;
      margin-bottom: 0.5rem;
    }

    .checklist-item button {
      padding: 0.25rem 0.5rem;
      font-size: 0.85rem;
      background: var(--danger);
      color: white;
      border: none;
      border-radius: 4px;
    }
  </style>

  <script>
    const API_URL = 'http://localhost:8000';
    let checklistItems: any[] = [];

    // Función global para agregar item al checklist
    (window as any).agregarChecklistItem = function() {
      const input = document.getElementById('checklist-item') as HTMLInputElement;
      const texto = input.value.trim();

      if (!texto) return;

      checklistItems.push({ texto, completado: false });
      input.value = '';

      renderChecklist();
    };

    // Función para eliminar item del checklist
    (window as any).eliminarChecklistItem = function(index: number) {
      checklistItems.splice(index, 1);
      renderChecklist();
    };

    function renderChecklist() {
      const container = document.getElementById('checklist-items')!;

      if (checklistItems.length === 0) {
        container.innerHTML = '';
        return;
      }

      container.innerHTML = checklistItems.map((item, index) => `
        <div class="checklist-item">
          <span style="flex: 1;">${item.texto}</span>
          <button type="button" onclick="eliminarChecklistItem(${index})">
            Eliminar
          </button>
        </div>
      `).join('');
    }

    // Manejar envío del formulario
    document.getElementById('proyecto-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const titulo = (document.getElementById('titulo') as HTMLInputElement).value;
      const descripcion = (document.getElementById('descripcion') as HTMLTextAreaElement).value;
      const estado = (document.getElementById('estado') as HTMLSelectElement).value;
      const prioridad = parseInt((document.getElementById('prioridad') as HTMLInputElement).value);

      const data = {
        titulo,
        descripcion: descripcion || undefined,
        estado,
        prioridad,
        checklist: checklistItems.length > 0 ? checklistItems : undefined
      };

      try {
        const response = await fetch(`${API_URL}/projects`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (!response.ok) {
          throw new Error('Error al crear proyecto');
        }

        const proyecto = await response.json();

        const mensaje = document.getElementById('mensaje')!;
        mensaje.innerHTML = `
          <div class="card" style="background: var(--success); color: white;">
            ✅ Proyecto creado exitosamente (ID: ${proyecto.id})
          </div>
        `;

        setTimeout(() => {
          window.location.href = `/proyecto/${proyecto.id}`;
        }, 1000);

      } catch (error) {
        console.error('Error:', error);
        const mensaje = document.getElementById('mensaje')!;
        mensaje.innerHTML = `
          <div class="card" style="background: var(--danger); color: white;">
            ❌ Error al crear proyecto. Verifica que el backend esté ejecutándose.
          </div>
        `;
      }
    });
  </script>
</Layout>
