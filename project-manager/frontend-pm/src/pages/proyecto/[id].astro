---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Detalle del Proyecto">
  <div id="loading" style="text-align: center; padding: 2rem;">
    Cargando proyecto...
  </div>

  <div id="proyecto-detalle" style="display: none;"></div>

  <style>
    .detail-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
    }

    .detail-section {
      background: var(--bg-primary);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .detail-section h3 {
      margin-bottom: 1rem;
      border-bottom: 2px solid var(--border-color);
      padding-bottom: 0.5rem;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .info-item {
      padding: 0.75rem;
      background: var(--bg-secondary);
      border-radius: 4px;
    }

    .info-label {
      font-size: 0.85rem;
      color: var(--text-secondary);
      margin-bottom: 0.25rem;
    }

    .info-value {
      font-weight: 500;
    }

    .checklist-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem;
      background: var(--bg-secondary);
      border-radius: 4px;
      margin-bottom: 0.5rem;
    }

    .action-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }
  </style>

  <script>
    const API_URL = 'http://localhost:8000';

    async function loadProyecto() {
      try {
        const pathParts = window.location.pathname.split('/');
        const id = pathParts[pathParts.length - 1];

        const response = await fetch(`${API_URL}/projects/${id}`);

        if (!response.ok) {
          throw new Error('Proyecto no encontrado');
        }

        const proyecto = await response.json();

        document.getElementById('loading')!.style.display = 'none';
        const container = document.getElementById('proyecto-detalle')!;
        container.style.display = 'block';

        const fecha_creacion = new Date(proyecto.fecha_creacion).toLocaleString('es-ES');
        const fecha_actualizacion = new Date(proyecto.fecha_actualizacion).toLocaleString('es-ES');

        container.innerHTML = `
          <div class="detail-header">
            <div>
              <h1>${proyecto.titulo}</h1>
              <p style="color: var(--text-secondary); margin-top: 0.5rem;">
                ID: ${proyecto.id} | Origen: ${proyecto.origen}
              </p>
            </div>
            <span class="badge badge-${proyecto.estado}">${proyecto.estado.replace('_', ' ')}</span>
          </div>

          <div class="action-buttons">
            <button class="btn" onclick="editarEstado()">Cambiar Estado</button>
            <button class="btn btn-secondary" onclick="window.location.href='/lista'">Volver a Lista</button>
            <button class="btn" style="background: var(--danger);" onclick="eliminarProyecto()">
              Eliminar
            </button>
          </div>

          <div class="detail-section">
            <h3>üìä Informaci√≥n General</h3>
            <div class="info-grid">
              <div class="info-item">
                <div class="info-label">Estado</div>
                <div class="info-value">${proyecto.estado}</div>
              </div>
              <div class="info-item">
                <div class="info-label">Prioridad</div>
                <div class="info-value">${proyecto.prioridad}/10</div>
              </div>
              <div class="info-item">
                <div class="info-label">Fecha de Creaci√≥n</div>
                <div class="info-value">${fecha_creacion}</div>
              </div>
              <div class="info-item">
                <div class="info-label">√öltima Actualizaci√≥n</div>
                <div class="info-value">${fecha_actualizacion}</div>
              </div>
            </div>
          </div>

          ${proyecto.descripcion ? `
            <div class="detail-section">
              <h3>üìù Descripci√≥n</h3>
              <p style="line-height: 1.6;">${proyecto.descripcion}</p>
            </div>
          ` : ''}

          ${proyecto.checklist && proyecto.checklist.length > 0 ? `
            <div class="detail-section">
              <h3>‚úÖ Checklist</h3>
              ${proyecto.checklist.map((item: any) => `
                <div class="checklist-item">
                  <span style="font-size: 1.2rem;">${item.completado ? '‚úÖ' : '‚¨ú'}</span>
                  <span style="flex: 1; ${item.completado ? 'text-decoration: line-through; color: var(--text-secondary);' : ''}">
                    ${item.texto}
                  </span>
                </div>
              `).join('')}
            </div>
          ` : ''}

          ${proyecto.etiquetas && proyecto.etiquetas.length > 0 ? `
            <div class="detail-section">
              <h3>üè∑Ô∏è Etiquetas</h3>
              <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                ${proyecto.etiquetas.map((tag: any) => `
                  <span style="padding: 0.5rem 1rem; background: ${tag.color || '#e5e7eb'}; color: #374151; border-radius: 6px; font-weight: 500;">
                    ${tag.nombre}
                  </span>
                `).join('')}
              </div>
            </div>
          ` : ''}
        `;

        // Guardar proyecto en variable global para acciones
        (window as any).proyectoActual = proyecto;

      } catch (error) {
        console.error('Error:', error);
        document.getElementById('loading')!.innerHTML = '‚ùå Error al cargar proyecto';
      }
    }

    (window as any).editarEstado = function() {
      const proyecto = (window as any).proyectoActual;
      const nuevoEstado = prompt('Nuevo estado:\n\nOpciones: idea, prototipo, en_progreso, bloqueado, pausado, completado, archivado', proyecto.estado);

      if (!nuevoEstado) return;

      const estadosValidos = ['idea', 'prototipo', 'en_progreso', 'bloqueado', 'pausado', 'completado', 'archivado'];

      if (!estadosValidos.includes(nuevoEstado)) {
        alert('Estado inv√°lido');
        return;
      }

      fetch(`${API_URL}/projects/${proyecto.id}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ estado: nuevoEstado }),
      })
      .then(response => response.json())
      .then(() => {
        alert('Estado actualizado');
        location.reload();
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al actualizar estado');
      });
    };

    (window as any).eliminarProyecto = function() {
      const proyecto = (window as any).proyectoActual;

      if (!confirm(`¬øEst√°s seguro de eliminar el proyecto "${proyecto.titulo}"?`)) {
        return;
      }

      fetch(`${API_URL}/projects/${proyecto.id}`, {
        method: 'DELETE',
      })
      .then(() => {
        alert('Proyecto eliminado');
        window.location.href = '/lista';
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al eliminar proyecto');
      });
    };

    loadProyecto();
  </script>
</Layout>
