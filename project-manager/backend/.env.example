# Tipo de base de datos: sqlite o postgresql
DATABASE_TYPE=sqlite

# URL de PostgreSQL (si se usa postgresql)
# DATABASE_URL=postgresql://user:password@localhost/project_manager

# CORS - Orígenes permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Webhook de n8n para eventos
N8N_WEBHOOK_URL=

# Token del Bot de Telegram (opcional)
TELEGRAM_BOT_TOKEN=

# Sincronización automática con GitHub
GITHUB_SYNC_ENABLED=false
