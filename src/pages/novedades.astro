---
import BlogLayout from '../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

// Obtener posts recientes para mostrar en la página
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 6);

const postsByCategory = {
  ctf: allPosts.filter(post => post.data.category === 'ctf').length,
  ai: allPosts.filter(post => post.data.category === 'ai').length,
  automation: allPosts.filter(post => post.data.category === 'automation').length,
  cybersecurity: allPosts.filter(post => post.data.category === 'cybersecurity').length,
  tools: allPosts.filter(post => post.data.category === 'tools').length
};
---

<BlogLayout title="Novedades" description="Últimas publicaciones sobre automatización, IA, ciberseguridad y CTFs">
  <div class="home-page">
    <div class="container">
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="hero-content animate-fade-in-up">
          <h1 class="hero-title gradient-text">Novedades</h1>
          <p class="hero-subtitle">
            Automatización, IA local, ciberseguridad y CTFs. 
            Documentando soluciones técnicas que realmente funcionan.
          </p>
          
          <!-- Filtros de categoría -->
          <div class="category-filters">
            <button class="filter-btn active" data-filter="all">Todas</button>
            <button class="filter-btn" data-filter="ia-automation">
              IA & Automatización 
              <span class="filter-count">{postsByCategory.ai + postsByCategory.automation}</span>
            </button>
            <button class="filter-btn" data-filter="ctf">
              CTFs 
              <span class="filter-count">{postsByCategory.ctf}</span>
            </button>
            <button class="filter-btn" data-filter="cybersecurity">
              Ciberseguridad 
              <span class="filter-count">{postsByCategory.cybersecurity}</span>
            </button>
            <button class="filter-btn" data-filter="tools">
              Herramientas 
              <span class="filter-count">{postsByCategory.tools}</span>
            </button>
          </div>
          
          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-number">{allPosts.length}</span>
              <span class="stat-label">Posts publicados</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{Object.keys(postsByCategory).length}</span>
              <span class="stat-label">Categorías</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{postsByCategory.ctf}</span>
              <span class="stat-label">CTF Writeups</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Recent Posts Section -->
      <section class="recent-posts-section">
        <h2 class="section-title">Últimas Publicaciones</h2>
        <div class="posts-grid">
          {recentPosts.map((post, index) => (
            <article class="post-card glass-card animate-fade-in-up" 
                     style={`animation-delay: ${index * 0.1}s`}
                     data-category={post.data.category}>
              <div class="card-header">
                <span class="category-tag" data-category={post.data.category}>
                  {post.data.category.toUpperCase()}
                </span>
                <time class="post-date" datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
              
              <h3 class="post-title">
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h3>
              
              <p class="post-description">{post.data.description}</p>
              
              <div class="post-footer">
                <div class="tags">
                  {post.data.tags.slice(0, 3).map(tag => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
                {post.data.readingTime && (
                  <span class="reading-time">{post.data.readingTime}</span>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
      <!-- Newsletter/Updates Section -->
      
    </div>
  </div>
</BlogLayout>

<style>
  .home-page {
    padding: var(--spacing-2xl) 0;
  }

  /* Hero Section */
  .hero-section {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
    border-radius: var(--radius-xl);
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 700;
    margin-bottom: var(--spacing-lg);
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.6;
  }

  /* Category Filters */
  .category-filters {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .filter-btn {
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    color: var(--text-secondary);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-lg);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  .filter-btn:hover {
    color: var(--text-primary);
    border-color: var(--border-secondary);
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: var(--primary-gradient);
    color: white;
    border-color: transparent;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }

  .filter-count {
    background: rgba(255, 255, 255, 0.2);
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-left: var(--spacing-sm);
    min-width: 20px;
    text-align: center;
    display: inline-block;
  }

  .filter-btn.active .filter-count {
    background: rgba(255, 255, 255, 0.3);
  }

  .filter-btn:hover .filter-count {
    background: rgba(255, 255, 255, 0.25);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-2xl);
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .stat-label {
    color: var(--text-muted);
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Section Titles */
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--spacing-xl);
    color: var(--text-primary);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .post-card {
    padding: var(--spacing-xl);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .post-card.hidden {
    display: none;
  }

  .post-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
  }

  .category-tag {
    padding: 6px 16px;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .category-tag[data-category="ctf"] {
    background: rgba(239, 68, 68, 0.2);
    color: #FCA5A5;
  }

  .category-tag[data-category="ai"] {
    background: rgba(139, 92, 246, 0.2);
    color: #C4B5FD;
  }

  .category-tag[data-category="automation"] {
    background: rgba(59, 130, 246, 0.2);
    color: #93C5FD;
  }

  .category-tag[data-category="cybersecurity"] {
    background: rgba(34, 197, 94, 0.2);
    color: #86EFAC;
  }

  .category-tag[data-category="tools"] {
    background: rgba(245, 158, 11, 0.2);
    color: #FCD34D;
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .post-title {
    margin-bottom: var(--spacing-md);
  }

  .post-title a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .post-title a:hover {
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tag {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-weight: 500;
    padding: 4px 8px;
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-sm);
  }

  .reading-time {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  /* Featured Section */
  .featured-section {
    margin-bottom: var(--spacing-2xl);
  }

  .featured-content {
    padding: var(--spacing-2xl);
    text-align: center;
  }

  .featured-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    color: var(--text-primary);
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .featured-item {
    text-align: left;
    padding: var(--spacing-lg);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
  }

  .featured-item:hover {
    border-color: var(--border-secondary);
    background: rgba(59, 130, 246, 0.05);
  }

  .featured-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
  }

  .featured-item p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }

  .featured-link {
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: all 0.2s ease;
  }

  .featured-link:hover {
    transform: translateX(4px);
  }

  /* Updates Section */
  .updates-section {
    background: linear-gradient(135deg, #1E293B 0%, #312E81 100%);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    text-align: center;
  }

  .updates-content h2 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-lg);
  }

  .updates-content p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto var(--spacing-xl);
  }

  .social-actions {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: white;
    text-decoration: none;
    padding: var(--spacing-md) var(--spacing-lg);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all 0.2s ease;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .social-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--spacing-2xl);
    color: var(--text-muted);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.5;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .posts-grid,
    .featured-grid {
      grid-template-columns: 1fr;
    }

    .hero-stats {
      gap: var(--spacing-lg);
    }

    .featured-grid {
      grid-template-columns: 1fr;
    }

    .social-actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero-stats {
      flex-direction: column;
      gap: var(--spacing-md);
    }
    
    .category-filters {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Sistema de filtrado por categorías
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const postCards = document.querySelectorAll('.post-card');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.dataset.filter;
        
        // Actualizar botones activos
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Filtrar posts
        postCards.forEach(card => {
          const cardCategory = card.dataset.category;
          
          if (filter === 'all') {
            card.classList.remove('hidden');
          } else if (
            (filter === 'ia-automation' && (cardCategory === 'ai' || cardCategory === 'automation')) ||
            (filter === 'ctf' && cardCategory === 'ctf') ||
            (filter === 'cybersecurity' && cardCategory === 'cybersecurity') ||
            (filter === 'tools' && cardCategory === 'tools')
          ) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
  });
</script>