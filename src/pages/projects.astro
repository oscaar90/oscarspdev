                <div class="tags">
                  {project.data.tags.slice(0, 3).map(tag => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
                {project.data.readingTime && (
                  <span class="reading-time">{project.data.readingTime}</span>
                )}
              </div>
            </article>
          ))}
          
          {projectsByCategory.tools.length === 0 && (
            <div class="empty-state">
