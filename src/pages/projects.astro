---
import BlogLayout from '../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true && data.type === 'project';
});

const projectsByCategory = {
  automation: allPosts.filter(post => post.data.category === 'automation'),
  ai: allPosts.filter(post => post.data.category === 'ai'),
  tools: allPosts.filter(post => post.data.category === 'tools')
};
---

<BlogLayout title="Proyectos" description="Explora mis proyectos de automatizaci√≥n, IA y herramientas personalizadas">
  <div class="projects-page">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title gradient-text animate-fade-in-up">Proyectos</h1>
        <p class="page-subtitle animate-fade-in-up">
          Una colecci√≥n de proyectos de automatizaci√≥n, inteligencia artificial y herramientas personalizadas
        </p>
      </div>

      <div class="projects-stats glass-card animate-fade-in-up">
        <div class="stat">
          <div class="stat-number gradient-text">{allPosts.length}</div>
          <div class="stat-label">Proyectos Totales</div>
        </div>
        <div class="stat">
          <div class="stat-number gradient-text">{projectsByCategory.automation.length}</div>
          <div class="stat-label">Automatizaci√≥n</div>
        </div>
        <div class="stat">
          <div class="stat-number gradient-text">{projectsByCategory.ai.length}</div>
          <div class="stat-label">Inteligencia Artificial</div>
        </div>
        <div class="stat">
          <div class="stat-number gradient-text">{projectsByCategory.tools.length}</div>
          <div class="stat-label">Herramientas</div>
        </div>
      </div>

      <section class="category-section">
        <h2 class="category-title">
          <span class="category-icon">ü§ñ</span>
          Inteligencia Artificial
        </h2>
        <p class="category-description">
          Proyectos de IA local, machine learning y automatizaci√≥n inteligente
        </p>
        
        <div class="projects-grid">
          {projectsByCategory.ai.map((project, index) => (
            <article class="project-card glass-card animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
              <div class="card-header">
                <span class="category-tag" data-category="ai">IA</span>
                <time class="project-date">
                  {project.data.publishDate.toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'short' 
                  })}
                </time>
              </div>
              
              <h3 class="project-title">
                <a href={`/blog/${project.slug}`}>{project.data.title}</a>
              </h3>
              
              <p class="project-description">{project.data.description}</p>
              
              <div class="project-footer">
                <div class="tags">
                  {project.data.tags.slice(0, 3).map(tag => (
                    <span class="tag">#{tag}</span>
                  ))}
                </div>
                {project.data.readingTime && (
                  <span class="reading-time">{project.data.readingTime}</span>
                )}
              </div>
            </article>
          ))}
          
          {projectsByCategory.ai.length === 0 && (
            <div class="empty-state">
              <div class="empty-icon">üß†</div>
              <p>Pr√≥ximamente m√°s proyectos de IA...</p>
            </div>
          )}
        </div>
      </section>

      <section class="category-section">
        <h2 class="category-title">
          <span class="category-icon">‚ö°</span>
          Automatizaci√≥n
        </h2>
        <p class="category-description">
          Scripts, sistemas y herramientas para automatizar procesos cotidianos
        </p>
        
        <div class="projects-grid">
          {projectsByCategory.automation.map((project, index) => (
            <article class="project-card glass-card animate-fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
              <div class="card-header">
                <span class="category-tag" data-category="automation">AUTOMATIZACI√ìN</span>
