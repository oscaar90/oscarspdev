      techTrack && techTrack.classList.add('reverse');
      techTrack && techTrack.classList.remove('paused');
      isPaused = false;
      updatePauseButton();
    });
    
    // Bot√≥n pausa/play
    pauseBtn && pauseBtn.addEventListener('click', function() {
      isPaused = !isPaused;
      if (isPaused) {
        techTrack && techTrack.classList.add('paused');
      } else {
        techTrack && techTrack.classList.remove('paused');
      }
      updatePauseButton();
    });
    
    // Bot√≥n siguiente (derecha)
    nextBtn && nextBtn.addEventListener('click', function() {
      isReverse = false;
      techTrack && techTrack.classList.remove('reverse');
      techTrack && techTrack.classList.remove('paused');
      isPaused = false;
      updatePauseButton();
    });
    
    // Actualizar icono del bot√≥n pausa
    function updatePauseButton() {
      if (!pauseBtn) return;
      
      const svg = pauseBtn.querySelector('svg');
      if (isPaused) {
        // Icono play
        svg.innerHTML = '<path d="m9 18 6-6-6-6"/>';
      } else {
        // Icono pausa
        svg.innerHTML = '<rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/>';
      }
    }
    
    // Pausar al hacer hover sobre las tecnolog√≠as
    const techChips = document.querySelectorAll('.tech-chip');
    techChips.forEach(function(chip) {
      chip.addEventListener('mouseenter', function() {
        techTrack && techTrack.classList.add('paused');
      });
      
      chip.addEventListener('mouseleave', function() {
        if (!isPaused) {
          techTrack && techTrack.classList.remove('paused');
        }
      });
    });
  });
</script>